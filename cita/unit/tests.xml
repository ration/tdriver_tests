<?xml version="1.0" encoding="ISO-8859-1"?>
<testdefinition version="1.0">
  <suite name="matti-unit-tests" domain="Matti" timeout="3600">
    <description>Matti Framework</description>
    <set name="matti-unit-tests" feature="Smoke set">
      <environments>
      <environment>
        <scratchbox>true</scratchbox>
        <hardware>true</hardware>
      </environment>
      </environments>
      <description>Matti smoke test set</description>
      <case name="all" type="Functional" level="Component">
        <step>ruby1.8 /usr/share/testability-driver-unit-tests/tc_testapp.rb</step>
      </case>
      <post_steps>
	<step>tar cvzf /root/tdriver_reports.tar.gz /root/tdriver_reports/</step>
	<get>/root/tdriver_reports.tar.gz</get>
      </post_steps>
    </set>
  </suite>
</testdefinition>
